<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.elron.examplerecycleradapter">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.easy.EasyActivity"
            android:label="EasyActivity" />
        <activity
            android:name=".ui.easy.horizontal.HorizontalActivity"
            android:label="HorizontalActivity" />
        <activity
            android:name=".ui.medium.MediumActivity"
            android:label="MediumActivity" />
        <activity
            android:name=".ui.medium.empty.EmptyActivity"
            android:label="EmptyActivity" />
        <activity
            android:name=".ui.medium.diffutils.DiffutilsActivity"
            android:label="DiffutilsActivity" />
        <activity
            android:name=".ui.hard.HardActivity"
            android:label="HardActivity" />
        <activity
            android:name=".ui.hard.pagination.PaginationActivity"
            android:label="PaginationActivity" />
        <activity
            android:name=".ui.nightmare.NightmareActivity"
            android:label="NightmareActivity" />
        <activity
            android:name=".ui.ultranightmare.swype.SwypeActivity"
            android:label="SwypeActivity" />
        <activity
            android:name=".ui.ultranightmare.longclick.LongClickActivity"
            android:label="LongClickActivity" />

    </application>
</manifest>